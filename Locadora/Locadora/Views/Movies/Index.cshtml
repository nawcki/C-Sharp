@model IEnumerable<Locadora.Models.Movies>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Filmes</h2>

<p>
    @Html.ActionLink("Add", "Create", "Movie", new { @class = "btn btn-success"} )
</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(Model => Model.Nome)</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelitem => item.Nome)</td>
            <td>
                <div class="btn-group">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                        Opções <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Editar", "Edit", new { id = item.Id })</li>
                        <li>@Html.ActionLink("Detalhes", "Details", new { id = item.Id })</li>
                        <li role="separator" class="divider"></li>
                        <li>@Html.ActionLink("Deletar", "Delet", new { id = item.Id })</li>
                    </ul>
                </div>
            </td>
        </tr>
    }
</table>